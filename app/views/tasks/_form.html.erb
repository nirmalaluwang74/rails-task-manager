<div class="container col-6 mx-auto">
 <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <% if @task.new_record? == false %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
</div>